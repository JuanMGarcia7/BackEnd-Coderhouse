
<h1>Datos</h1>
<p>El ID que busc√≥ no existe, aqui una lista de todos los productos!</p>
{{#if hayProductos}}
    <div class="table-responsive">
        <table class="table table-dark">
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Foto</th>
            </tr>
            {{#each productos}}
            <tr>
                <td>{{this.nombre}}</td>
                <td>${{this.precio}}</td>
                <td><img width="50" src={{this.foto}} alt="not found"></td>
                <td>{{this.timestamp}}</td>
                <td>{{this.descripcion}}</td>
                <td>{{this.codigo}}</td>
                <td>{{this.stock}}</td>
            </tr>
            {{/each}}
        </table>
    {{else}}
    <h3 class="alert alert-warning">No se encontraron productos</h3>
    {{/if}}
    </div>