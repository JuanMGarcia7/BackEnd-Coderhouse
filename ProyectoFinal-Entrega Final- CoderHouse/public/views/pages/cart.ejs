<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>Formulario de Ingreso de Productos</title>
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
  integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l"
  crossorigin="anonymous"
/>
<link rel="stylesheet" href="./css/style.css" />
<script src="https://cdn.jsdelivr.net/npm/normalizr@3.6.1/dist/normalizr.browser.min.js"></script>
<script src="sweetalert2.all.min.js"></script>
<body class="fondoGeneral">
  <header><%- include('../partials/header'); %></header>
  <div>
    <div class="containerLogoUser">
      <img src="../../assets/user.png" class="d-block logoUser" alt="..." />
    </div>
    <div class="containerDatosUser"><%=email%></div>
  </div>
  <div class="tituliPrincipal">
    <h3>Bienvenidos al carrito!</h3>
  </div>
  <div class="container mt-3 containerCart">
    <div class="jumbotron">
      <h3>Tu carrito &#9759;</h3>
      <br />

      <% if(hayProductos){ %>
      <div class="table-responsive">
        <table class="table table-dark">
          <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>ID</th>
          </tr>
          <%productos.forEach(function(producto) {%>
          <tr>
            <td><%=producto.nombre%></td>
            <td><%=producto.precio%></td>
            <td><%=producto._id%></td>
            <td>
              <form action="/cart/delete/<%=producto.nombre%>" method="post">
                <button class="logoEliminarContainer">
                  <img
                    src="assets/logoEliminar.png"
                    class="logoEliminar"
                    alt=""
                  />
                </button>
              </form>
            </td>
          </tr>
          <%});%>
        </table>
      </div>
      <% } else{ %>
      <h3 class="alert alert-warning">No se encontraron productos</h3>
      <% } %>

      <br />
    </div>
  </div>

  <form action="/compra-realizada" method="post">
    <button type="submit" class="btnAddToCart btnCompra">
      <p class="textCompra">Finalizar compra</p>
    </button>
  </form>

  <div>
    <form action="/carrito-vacio" method="post">
      <button type="submit" class="vaciarCarro">Vaciar carro</button>
    </form>
  </div>
  <footer><%- include('../partials/footer'); %></footer>
</body>
