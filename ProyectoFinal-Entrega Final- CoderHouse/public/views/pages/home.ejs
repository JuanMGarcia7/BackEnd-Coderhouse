<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>Inicio</title>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
<link rel="stylesheet" href="./css/style.css" />
<script src="https://cdn.jsdelivr.net/npm/normalizr@3.6.1/dist/normalizr.browser.min.js"></script>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@500;600&display=swap" rel="stylesheet">

  <body class="fondoGeneral">
    <header> 
      <%- include('../partials/header'); %>
    </header>
    <div>
      <div class="containerLogoUser">
        <img src="assets/user.png" class="d-block logoUser" alt="...">
      </div>
      <div class="containerDatosUser">
        <%=email%> 
      </div>
    </div>
    <div class="itemCategoriesContainer">
      <div>
        <a class="itemCategories" href="/home">Todo</a>
      </div>
      <div >
        <a class="itemCategories" href="/categorias/gamer">Gamer</a>
      </div>
      <div>
        <a class="itemCategories" href="/categorias/oficina">Oficina</a>
      </div>
    </div>
    <div id="carouselExampleIndicators" class="carousel slide carousel-container" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="assets/gamers.jpg" class="d-block w-100 imgCar" alt="...">
        </div>
        <div class="carousel-item">
          <img src="assets/oficina.jpg" class="d-block w-100 imgCar" alt="...">
        </div>
        <div class="carousel-item">
          <img src="assets/random.jpg" class="d-block w-100 imgCar" alt="...">
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-target="#carouselExampleIndicators" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-target="#carouselExampleIndicators" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </button>
    </div>
    <div class="tituliPrincipal">
      <h3 class="titlProductos">Nuestros productos</h3>  
    </div>
    <br />
    <div  >
    <% if(hayProductos){ %>
      <%productos.forEach(function(producto) {%>
      
    <form action="/productos/<%=producto._id%>" method="post">
      <div class=" width">
        <div >
          <h5 class="cardTitle"><%=producto.nombre%></h5>
          <p >
            <ul>
              <li name="id">ID:<%=producto._id%> </li>
              <li name="nombre" >Nombre: <%=producto.nombre%></li>
              <li name="categoria">Categoria: <%=producto.categoria%> </li>
              <li name="precio">Precio: <%=producto.precio%></li>
            </ul>
          </p>
          <button type="submit"  class="btnAddToCart" id="buttonToCart"
          >
            Agregar al carrito
          </button>
        </div>
      </div>
    </form>
        <%});%>
      <%} else{ %>
        <h3 class="alert alert-warning">No se encontraron productos</h3>
        <% } %>
  </div>
    <div id="chat-container">
      <div id="chat-windows">
        <div id="output"></div>
        <div id="actions"></div>
      </div>
      <input type="text" id="username" placeholder="Usuario">
      <input type="text" id="message" placeholder="Mensaje">
      <button id="send">Enviar</button>
    </div>
  
  <footer>
    <%- include('../partials/footer'); %>
</footer>
<script src="/socket.io/socket.io.js"></script>
<script src="js/chat.js"></script>

<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF" crossorigin="anonymous"></script>
</body>


